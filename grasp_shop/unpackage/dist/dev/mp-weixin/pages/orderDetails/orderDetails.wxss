.recomend-list ._h2 {
	position: relative;
	font-size: 17px;
	font-weight: bold;
	text-align: left;
	padding-left: 9px;
	height: 40px;
	line-height: 40px;
}
.recomend-list view {
	position: relative;
	font-size: 17px;
	font-weight: bold;
	text-align: left;

	height: 40px;
	line-height: 40px;
}
.recomend-list ._h2:before {
	position: absolute;
	content: "";
