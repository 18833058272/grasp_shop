.search {
  display: flex;
  align-items: center;
  height: 120rpx;
  padding-bottom: 30rpx;
  background-color: #f7f7f7;
  font-size: 26rpx;
}
.search > image {
  width: 18rpx;
  height: 31rpx;
  margin-left: 53rpx;
}
.search .search_box {
  display: flex;
  align-items: center;
  width: 600rpx;
  height: 60rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  margin: 0 12rpx 0 25rpx;
  padding-left: 18rpx;
}
.search .search_box image:nth-child(1) {
  margin: 0 18rpx 0 7rpx;
  width: 28rpx;
  height: 28rpx;
}
.search .search_box image:nth-child(3) {
  margin: 0 14rpx 0 auto;
  width: 31rpx;
  height: 31rpx;
}
.search .search_box input {
  height: 60rpx;
  line-height: 60rpx;
  color: #969696;
}
.search .search_btn {
  width: 96rpx;
  height: 52rpx;
  background-color: #fff;
  color: pink;
  border-radius: 26rpx;
  line-height: 52rpx;
  text-align: center;
}
.bottom {
  margin-top: -10rpx;
  border-radius: 24rpx 24rpx 0 0;
  background-color: #ffffff;
  overflow: hidden;
}
.hot,
.history {
  margin: 34rpx 0;
  padding: 0 36rpx;
}
.history {
  margin-bottom: 68rpx !important;
}
.title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #262626;
  font-family: Pingfang-Bold;
  margin-bottom: 34rpx;
  font-weight: bold;
}
.title image {
  width: 25rpx;
  height: 28rpx;
  margin: 0 6rpx 0 auto;
}
.item_box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 26rpx;
}
.item_box .item {
  display: flex;
  align-items: center;
  height: 48rpx;
  margin: 0 24rpx 24rpx 0;
  padding: 0 24rpx;
  line-height: 48rpx;
  border-radius: 24rpx;
  color: #333333;
  background-color: #f4f4f4;
}
.item_box .item image {
  margin-right: 8rpx;
  width: 21rpx;
  height: 26rpx;
}
.keyword-list-box {
  position: fixed;
  top: 120rpx;
  width: 750rpx;
  background-color: #fff;
  z-index: 1;
}
.keyword-entry-tap {
  background-color: #eee;
}
.keyword-entry {
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 26rpx;
  color: #333;
  padding: 0 30rpx;
  border-bottom: solid 1rpx #f7f7f7;
}
.keyword-entry image {
  width: 29rpx;
  height: 30rpx;
  margin-right: 30rpx;
}
.keyword-entry text {
  margin-left: auto;
  color: #777;
  font-size: 22rpx;
}

